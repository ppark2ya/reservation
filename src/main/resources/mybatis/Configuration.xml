<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.myproject.reservation.board.dto.BoardDto" alias="boardDto"/>
		<typeAlias type="com.myproject.reservation.board.dto.BoardCommentDto" alias="boardCommentDto"/>
		<typeAlias type="com.myproject.reservation.customer.dto.CustomerDto" alias="customerDto"/>
		<typeAlias type="com.myproject.reservation.room.RoomDto" alias="roomDto"/>
	</typeAliases>
	
	<!-- sql 문을 정의하고 있는 xml 문서 -->
	<mappers>
		<mapper resource="com/myproject/reservation/mybatis/CustomerMapper.xml"/>
		<mapper resource="com/myproject/reservation/mybatis/BoardMapper.xml"/>
		<mapper resource="com/myproject/reservation/mybatis/BoardCommentMapper.xml"/>
		<mapper resource="com/myproject/reservation/mybatis/RoomMapper.xml"/>
		<mapper resource="com/myproject/reservation/mybatis/ReservationMapper.xml"/>
	</mappers>	
</configuration>







